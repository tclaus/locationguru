<% meta_tag :page_title,page_title + ' - Admin Userlist' %>

<% # remove darker container %>
<div class="secondary-container">
  <div class="container">

    Total Users: <%= t('.total_users') %>
    <%= @users.count %>, <%= link_to 'Export To File', admin_export_users_path %>
    <br>

    <div class="table-responsive">
      <table class="table table-striped">
          <tr>
           <th scope="col"></th>
           <th scope="col">ID</th>
           <th scope="col">Email</th>
           <th scope="col">Name</th>
           <th scope="col">Locations active/inactive</th>
           <th scope="col">Created</th>
           <th scope="col">Last Login</th>
           <th scope="col">Login count</th>
           <th scope="col">Provider</th>
           <th scope="col">Is Confired?</th>
           <th scope="col">Language</th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td><%= link_to user_path(user), data: { confirm: 'Are you sure?' }, method: :delete do %>
                    <i class="far fa-trash"></i>
                <% end %>
            </td>
            <td><%= user.id %></td>
            <td><%= mail_to user.email %></td>
            <td><%= "#{user.first_name} #{user.last_name}" %></td>
            <td>
              <%= link_to user.active_locations.count, admin_locations_path(active: :true, userid: user.id) %> /
              <%= link_to user.inactive_locations.count, admin_locations_path(active: :false, userid: user.id) %></td>
            <td><%= user.created_at %></td>
            <td><%= user.last_sign_in_at %></td>
            <td><%= user.sign_in_count %></td>
            <% if user.provider.blank? %>
              <td>Site</td>
            <% else %>
              <td><%= user.provider %></td>
            <% end %>
            <td>
              <% if user.confirmed? %>
                <i class="fas fa-check"></i>
              <% else %>
                <i class="fas fa-minus"></i>
              <% end %>
            </td>
            <td><%= user.language_id %></td>
          </tr>
          <% end %>
        </table>

    </div>
  </div>
</div>
