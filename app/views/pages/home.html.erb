
<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: t('.where_are_you_looking_for'), class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= collection_select(:location, :location_type, KindType.all, :id, :name, {:prompt=> t('.select_location_type')}, {:class => "form-control select"}) %>
    </div>
  </div>
  <br/>
  <br/>
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag t('search'), class:"btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<!-- Locations -->
<div>
  <h3><%= t('Locations') %></h3>
</div>
<br/>
<% if !@locations.empty? %>
  <%= render 'pages/listing' %>
<% else %>
  <%= render 'pages/no_locations_found' %>
<% end %>
