<div class="row">
  <div class="col-md-3">
    <%= render 'location_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listing
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @location do |f| %>
          <div class="row">
            <div class="col-md-4 select">
              <div class="form-group">
                <label>
                  Home Type
                </label>
                <%= f.select :building_type, [["Entire", "Entire"],["Private","Private"]], id: "building_type", prompt: "Select...", class:"form-control" %>

              </div>
            </div>

            <div class="col-md-4 select">
              <div class="form-group">
                <label>
                  Home Type
                </label>
                <%= f.select :room_type, [["Apartment", "Apartment"],["House","House"],["Bed & Breakfast","Bed & Breakfast"]], id: "room_type", prompt: "Select...", class:"form-control" %>
              </div>
            </div>

          </div>
          <div class="text-center">
            <div>
              <%= f.submit "Save", class:"btn btn-form" %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
