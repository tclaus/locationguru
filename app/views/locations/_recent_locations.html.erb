<div class="row">
  <% @recent_locations.each do |location| %>
    <div class="col-sm-6 col-md-4">
      <div class="panel panel-default">
        <%= link_to location do %>
        <div class="panel-heading preview">
          <%= image_tag location.cover_photo(:medium), alt: location.listing_name %>
        </div>
        <% end %>
        <div class="panel-body">
          <div class="listing-city"><%= location.city %> </div>
          <% if location.listing_name? %>
            <%= link_to location.listing_name, location, class: "listing-name" %>
          <% else %>
            <%= link_to t('.set_a_name'), location, class: "listing-name" %>
          <% end %>
          <br>
          <div class="listing-properties">
            <div><%= trLocationType(location.location_type) %> - <%= trKindType(location.kind_type) %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
