<div class="panel panel-default">
  <div class="panel-heading">
    <%= t('.create_your_location') %>
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @location do |f| %>
        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <label><%= t('.location_type') %></label>
              <%= f.collection_select(:location_type, LocationType.all, :id, :name, prompt: t('.select_location_type'))
               %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label><%= t('.location_kind') %></label>
              <%= f.collection_select(:kind_type, KindType.all, :id,:name, prompt: t('.select_location_kind')) %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-group">
              <label><%= t('.maximum_number_of_persons') %></label>
              <%= f.text_field :max_persons, prompt: "50",
              class: "form-control" %>

            </div>
          </div>

          <div> <%= f.submit t('.create'), class:"btn btn-normal" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
