<div class="panel panel-default">
  <div class="panel-heading">
    Create your event location
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @location do |f| %>
        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <label> Location Type</label>
              <%= f.collection_select(:location_type, LocationType.all, :id, :name, prompt: "Select a type")
               %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Kind Type</label>
              <%= f.collection_select(:kind_type, KindType.all, :id,:name, prompt: "Select a kind") %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-group">
              <label> Maximum number of persons </label>
              <%= f.text_field :max_persons, prompt: "50",
              class:"form-control" %>

            </div>
          </div>

          <div> <%= f.submit "Create my location", class:"btn btn-normal" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
