<div class="alert alert-primary" role="alert">
  <%
  created = @location.created_at
  modified = @location.updated_at
  last_change_days_ago = (DateTime.now.to_date - modified.to_date).to_i
  %>
  Created at: <%= created %>,
  Last modified: <%= modified %> (<%= last_change_days_ago %> days ago),
  Messages (total, 30d): <%= @location.messages.count %>,
  <%= @location.messages.where("created_at >= ?", 30.day.ago).count %>

</div>
