<% if !@location.nearbys(10).blank? %>
  <div class="row">
    <h3><%= t('.near_by') %></h3>
    <% for location in @location.nearbys(10).max(6).shuffle %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag location.cover_photo(:medium), alt: location.listing_name %>
          </div>
          <div class="panel-body">
            <%= link_to location.listing_name, location %>
            <br/>
            (<%= location.distance.round(1) %>
            <%= t('.distance_from') %>)
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
