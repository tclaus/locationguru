<div class="row">
  <% locations.each do |location| %>
    <div class="col-md-4">
      <%= link_to location do %>
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag location.cover_photo(:medium), alt: location.listing_name %>
        </div>
        <div class="panel-body">
          <div class="listing-city"><%= location.city %> </div>
          <% if location.listing_name? %>
            <div class="listing-name"><%= location.listing_name %></div>
          <% else %>
            <div class="listing-name"> <%= t('.set_a_name') %></div>
          <% end %>
          <div class="listing-properties">
            <div><%= trLocationType(location.location_type) %> - <%= trKindType(location.kind_type) %></div>
            <div>max. <%= location.max_persons %> <%= t('.persons') %> </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>

  <% if locations.empty? %>
    <div class="panel-body message-scroller">
      <%= t('.no_locations_found') %>
    </div>
  <% end %>
</div>
