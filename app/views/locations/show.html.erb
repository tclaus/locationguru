
<% # header information %>
<% meta_tag :description, @location.listing_name + ', ' + @location.summary %>
<% meta_tag :siteUrl, 'https://' + request.host + listing_location_path + '/' + @location.id.to_s %>
<% # Keywords: 'fix + town' %>

<div class="row">
  <div class="col-md-12">
    <%= image_tag @location.cover_photo(:regular), class: "img-header" %>
    <% meta_tag :image, @location.cover_photo(:thumb) %>
  </div>
</div>
<br/>
<div class="row">

  <!-- left panel -->
  <div class="col-md-8">
    <!-- listing name -->
    <div class="row">
      <div class="col-md-8">
        <h1><%= @location.listing_name %></h1>
          <%= social_share_button_tag(@location.listing_name,
            image: @location.cover_photo(:medium),
            desc: @location.listing_name) %>

          <% if !@location.address.blank? %>
          <address>
            <%= @location.address.gsub(/(?:\n\r?|\r\n?|,)/, '<br>').html_safe %>
          </address>
          <% end %>
      </div>
    </div>
    <hr/>

    <div class="row text-babu">
      <div class="row text-center row-space-1">

        <div class="col-xs-3">
          <i class="fa fa-home fa-2x"></i><br>
            <%= trKindType(KindType.find(@location.kind_type).id) %>
        </div>
        <div class="col-xs-3">
          <i class="fa fa-location-arrow fa-2x"></i><br>
          <%= trLocationType(LocationType.find(@location.location_type).id) %>
        </div>
        <div class="col-xs-3">
          <i class="fa fa-cutlery fa-2x"></i><br>
          <% if @location.catering? %>
            <%= trCateringType(CateringType.find(@location.catering).id) %>
          <% else %>
            -
          <% end %>
        </div>
        <% if !@location.max_persons.blank? %>
          <div class="col-xs-3">
            <i class="fa fa-male fa-2x"></i><br>
            <%= @location.max_persons %>
          </div>
        <% end %>
      </div>
    </div>
    <hr/>
    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h3><%= t('.about_this_listing') %></h3>
        <p><%= @location.summary %></p>
      </div>
    </div>

    <hr/>
    <!-- Amenity -->
    <div class="row">
      <div class="col-md-3">
        <h4><%= t('.amenities') %></h4>
      </div>
      <% if @location.has_amemities %>
      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <ul class="amenities">
              <% if @location.has_kitchen %> <li><%= t('.has_kitchen') %></li> <% end %>
              <% if @location.has_outdoor %> <li><%= t('.has_outdoor') %></li> <% end %>
              <% if @location.has_parking_space %><li><%= t('.has_parking_space') %></li> <% end %>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="amenities">
              <% if @location.has_furniture %> <li><%= t('.has_furniture') %></li> <% end %>
              <% if @location.has_heating %> <li><%= t('.has_heating') %></li> <% end %>
              <% if @location.has_air_conditioning %> <li><%= t('.has_air_conditioning') %></li> <% end %>
              <% if @location.has_music_eq %> <li><%= t('.has_music_eq') %></li> <% end %>
            </ul>
          </div>
        </div>
      </div>
      <% else %>
      <div class="col-md-3">
        <%= t('.no_amenities_set') %>
      </div>
      <% end %>
    </div>
    <hr/>
    <!-- Carussel -->
    <div class="row">
      <% if @photos.length > 0 %>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <% @photos.each do |photo| %>
              <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <% @photos.each do |photo| %>
              <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                <%= image_tag photo.image.url() %>
              </div>
            <% end %>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <% end %>
    </div>
    <hr/>

    <!-- Reviews -->
    <div class="row">
      <div class="col-md-12">
        <h3><%= t('.review',count: @guest_reviews.count) %>
          <span id="average_rating" data-value= <%= @location.average_rating %>></span>
        </h3>
        <%= javascript_include_tag('average_rating') %>
        <% if @guest_reviews.count > 0 %>
          <div class="container">
            <div>
              <%= render "reviews/guest_list" %></div>
          </div>
        <% end %>
      </div>
    </div>
    <br/>
    <br/>

    <!-- Google Maps-->
    <% if !@location.latitude.blank? && !@location.longitude.blank? %>
      <div class="row">
        <div id="map" data-lat=<%= @location.latitude %>
            data-lng=<%= @location.longitude %>
            data-name=<%= @location.listing_name %>
            data-image=<%= @location.cover_photo(:thumb) %>
            style="width: 100%; height: 400px">
        </div>
        <%= javascript_include_tag('maps_single_location') %>
      </div>
      <hr/>
    <% end %>

  <% # Locatins nearby %>
    <% if !@location.nearbys(10).blank? %>
      <div class="row">
        <h3><%= t('.near_by') %></h3>
        <% for location in @location.nearbys(10).max(6).shuffle %>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading preview">
                <%= image_tag location.cover_photo(:medium) %>
              </div>
              <div class="panel-body">
                <%= link_to location.listing_name, location %>
                <br/>
                (<%= location.distance.round(1) %>
                <%= t('.distance_from') %>)
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <!-- reservation form -->
    <%= render 'contact', locals: {location: @location.user} %>
  </div>
</div>
