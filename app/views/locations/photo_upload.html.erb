<div class="row">
  <div class="col-md-3">
    <%= render 'location_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t('.photos') %>
      </div>
      <div class="panel-body">
        <div class="container">
          <div class="row">
            <div class="col-md-offset-3 col-md-6">
              <!-- Photos upload goes here -->
              <%= form_for @location, url: location_photos_path(@location), method: 'post', html: {multipart: true} do |f| %>
                <div class="row">
                  <div class="form-group">
                    <span class="btn btn-default btn-file text-babu">
                      <i class="fa fa-cloud-upload" aria-hidden="true"></i>
                      <%= t('.select_photos') %>
                      <%= file_field_tag "images[]", type: :file, multiple: true, id:"filelist" %>
                      <%= javascript_include_tag('photos_upload') %>
                    </span>
                  </div>
                </div>
                <div class="text-center">
                  <%= f.submit t('.send_photos'), class: "btn btn-form", class:"hidden" %>
                </div>
              <% end %>
            </div>
          </div>
          <div id="photos"> <%= render 'photos/photos_list' %> </div>
        </div>
      </div>
    </div>
  </div>
</div>
