<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to t('your_listings'), locations_path, class: "sidebar-link active" %>
      </li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
      <%= t('your_listings') %>  (<%= @locations.count %>)
      </div>
    </div>
    <div class="panel-body">
      <% if @locations.count==0 %>
      <div class="row">
        <%= t('no_locations_yet') %>
      </div>
      <% else %>
        <% @locations.each do |location| %>
            <div class="row">

              <div class="col-md-1" class="location-status">
                <% if location.active? %>
                  <i class="fa fa-check-circle"></i>
                <% else %>
                  <i class="fa fa-circle-o"></i>
                <% end %>
              </div>

              <div class="col-md-2">
                <%= link_to listing_location_path(location) do %>
                  <%= image_tag location.cover_photo(:thumb), class:"location_thumb" %>
                <% end %>
              </div>
              <div class="col-md-7">
                <%= link_to listing_location_path(location) do %>
                <h4> <%= location.listing_name %> </h4>
                <% end %>
              </div>
              <div class="col-md-2 right">
                <%= link_to t('update'), listing_location_path(location), class:"btn btn-primary action-listing" %>
                <%= link_to t('delete'), location_path(location), method: :delete, data:{confirm: t('.are_you_sure_delete_location')}, class:"btn btn-danger btn-sm action-listing" %>
              </div>
            </div>
            <hr/>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
