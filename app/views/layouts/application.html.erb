<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %>
    </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= maps_key %>&libraries=places"></script>
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://code.jquery.com/ui/1.11.4/themes/hot-sneaks/jquery-ui.css" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <meta name='description' content="<%= yield_meta_tag(:description, t('.meta_description')) %>"/>
    <meta name='keywords' content="<%= yield_meta_tag(:keywords, t('.meta_keywords')) %>"/>

    <% # Open Graph facebook %>
    <meta name='og:url' content="<%= yield_meta_tag(:siteUrl,'https://www.locationguru.net') %>">
    <meta name='og:type' content='website'>
    <meta name='og:title' content='<%= page_title %>'>
    <meta name='og:image' content="<%= yield_meta_tag(:image, 'https://www.locationguru.net/apple-touch-icon.png') %>">
    <meta name='og:image_alt' content='Locationguru logo'>
    <meta name='og:description' content="<%= yield_meta_tag(:description, t('.meta_description')) %>">

    <% # Open Graph twitter %>
    <meta name='twitter:title' content='<%= page_title %>'>
    <meta name='twitter:card' content='summary'>
    <meta name='twitter:site' content='@vanchesa'>
    <meta name='twitter:description' content="<%= yield_meta_tag(:description, t('.meta_description')) %>">
    <meta name='twitter:image' content="<%= yield_meta_tag(:image, 'https://www.locationguru.net/apple-touch-icon.png') %>">

    <% # Favicons %>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#d7f4f1">
    <meta name="theme-color" content="#d7f4f1">
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/messages' %>

    <div class="container">
      <%= yield %>
    </div>

    <%= render 'shared/footer' %>
  </body>
</html>
