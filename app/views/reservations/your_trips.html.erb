<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to "Your Listing", locations_path, class:"sidebar-link" %>
      </li>
      <li class="sidebar-item">
        <%= link_to "Your Trips", your_trips_path, class:"sidebar-link active" %>
      </li>
      <li class="sidebar-item">
        <%= link_to "Your Reservations", locations_path, class:"sidebar-link" %>
      </li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
      Your Trips
      </div>
    </div>
    <div class="panel-body">
      <% @trips.each do |trip| %>
          <div class="row">
            <div class="col-md-2">
              <%= trip.start_date.strftime('%v') %>
            </div>
            <div class="col-md-2">
              <%= link_to locations_path(trip.location) do %>
                <%= image_tag trip.location.cover_photo(:thumb) %>
              <% end %>
            </div>

            <div class="col-md-8">
              <%= link_to trip.location.listing_name, location_path(trip.location) %>
              <span class="pull-right text-center">
                <%= image_tag avatar_url(trip.location.user), class:"img-circle avatar-medium" %> <br/>
                <%= link_to user_path(trip.location.user) do %>
                  <%= trip.location.user.fullname %>
                <% end %>
              </span>
            </div>
          </div>
          <hr/>
      <% end %>
    </div>
  </div>
</div>
