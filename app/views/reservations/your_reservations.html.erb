<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to t('your_listings'), locations_path, class: "sidebar-link" %>
      </li>
      <li class="sidebar-item">
        <%= link_to t('your_trips'), your_trips_path, class: "sidebar-link" %>
      </li>
      <li class="sidebar-item">
        <%= link_to t('your_reservations'), your_reservations_path, class: "sidebar-link active" %>
      </li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
      <%= t('your_reservations') %>
      </div>
    </div>
    <div class="panel-body">
      <% @locations.each do |location| %>
        <% location.reservations do |reservation| %>
          <div class="row">
            <div class="col-md-2">
              <%= reservation.start_date.strftime('%v') %>
            </div>
            <div class="col-md-2">
              <%= link_to location_path(reservation.location) do %>
                <%= image_tag reservation.location.cover_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-8">
              <%= link_to reservation.location.listing_name, location_path(reservation.location) %> <br/> <br/>
              <span>
              <%= link_to user_path(reservation.user) do %>
                <%= image_tag avatar_url(reservation.user), class: "img-circle avatar-small" %> <br/>
                <%= reservation.user.fullname %>
              <% end %>
            </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
