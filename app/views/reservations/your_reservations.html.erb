<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", locations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Reservations
      </div>
      <div class="panel-body">

      <%= month_calendar do |date| %>
        <%= date.day %>
        <% @meetings.each do |meeting| %>
          <div>
            <%# = meeting.name %>
          </div>
        <% end %>
      <% end %>

      <% @hasReservations = false %>
      <% @locations.each do |location| %>

        <% location.reservations.each do |reservation| %>
          <% @hasReservations = true %>
          <div class="row">
            <div class="col-md-2">
              <%= reservation.start_date.strftime('%v') %>
            </div>
            <div class="col-md-2">
              <%= link_to location_path(reservation.location) do %>
                <%= image_tag reservation.location.cover_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-5">
              <%= link_to reservation.location.listing_name, location_path(reservation.location) %><br/><br/>
              <span>
                <% if !reservation.user.blank? %>
                  <% if !reservation.user.isSystem %>
                    <%= link_to user_path(reservation.user) do %>
                      <%= image_tag avatar_url(reservation.user), class: "img-circle avatar-small" %>
                      <%= reservation.user.fullname %>
                    <% end %>
                  <% else %>
                  <% # System user %>
                  <%= reservation.email %>
                  <% end %>
                <% else %>
                  <%= image_tag avatar_url(nil), class: "img-circle avatar-small" %>
                  <%= t('.unknown_or_deleted_user') %>
                <% end %>
              </span>
            </div>
            <div class="col-md-3 text-right">
              <%= t('.reservation_status') %>: <%= reservation.status %>
            </div>
          </div>
        <hr/>
        <% end %>
      <% end %>
      <% if !@hasReservations %>
        <%= t('.you_have_no_reservation_for_any_location') %>
      <% end %>
</div>
</div>
</div>
</div>
