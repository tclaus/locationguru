<% # Should load cities as search lists, async? %>
<div class="cities-container">
  <div class="container">
  <div class="link-cloud-block">
    <h2> <%= t('.locations_in') %></h2>
    <% @link_clouds.each do |cloud| %>
      <% if cloud.city %>
      <% # TODO keine Suche starten, sondern ein Link-Path aufrufen %>
      <div class= "link-cloud">
        <%= link_to cloud.city, '/cities/' + CGI.escape(cloud.city) %>
      </div>
      <% end %>
    <% end %>
  </div>
  </div>
</div>
