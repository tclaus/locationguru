<div class="panel panel-default">
  <% if !@message.location.nil? %>
    <% listing_name = @message.location.listing_name %>
  <% else %>
    <% listing_name = "Unbekannte oder gelÃ¶schte Location" %>
  <% end %>
  <div class="panel-heading">
    <h3 class="panel-title"><%= listing_name %></h3>
  </div>
  <div class="panel-body">

    <div>
      <div>
      <span>
        <strong><%= listing_name %></strong>
      </span>
      </div>
        <%= @message.created_at.strftime("%d.%m.%Y") %>
    </div>
    <%= link_to t('.answer_message'), "#{}",
    id:"mail_to_link",
    data: {
      mail: @message.email,
      subject:"#{listing_name} | Locationguru.net",
      body:"" },
      class: "btn btn-default btn-small" %>

    <div>
      <br>
      <strong>
        <%= @message.name %>
        &lt;<%= @message.email %>&gt;
      </div>
    </strong>
    <div>
      <hr>
      <p>
      <%= html_line_breaks(@message.message) %>
    </p>
    </div>
  </div>
</div>
<%= javascript_include_tag 'send_message_on_button' %>
