<div class="secondary-container">
  <div class="container">
    <div class="add-review">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h2><%= t('.your_review_for') + " " + @reservation.location.listing_name %><br>
          <small><%= t('.your_inquery_for', date: l(@reservation.start_date.to_date, format: :full)) %></small>
          </h2>

          <p><%= t('.how_was_the_communication') %><br>
             <%= t('.how_was_the_organization') %><br>
            <%= t('.did_the_venue_fulfill_your_expectations') %></p>

          <%= form_for @review do |f| %>
            <div id="stars"></div>
            <div class="form-group">
              <%= f.label :comment, t('.your_comment') %>
              <%= f.text_area :comment, rows: 3, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :name, t('.optional_your_name') %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <%= f.hidden_field :location_id, value: @review.location_id %>
            <%= f.hidden_field :reservation_id, value: @review.reservation_id %>
            <%= f.hidden_field :review_token, value: @reservation.review_token %>

            <div class="text-center">
              <%= f.submit t('.add_review'), class: "btn btn-primary" %>
            </div>
            <%= javascript_include_tag('review-raty') %>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
