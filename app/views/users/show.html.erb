<div class="row">
  <div class="col-md-3">
    <div class="center">
      <%= image_tag avatar_url(@user), class:"avatar-full" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading"><%= t('.verification') %></div>
      <div class="panel-body">
        <ul class="sidebar-list">
          <% if @user.confirmation_token %>
            <li><%= t('.email_address') %>
              <span class="pull-right icon-babu">
                <i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
          <% if @user.provider %>
            <li><%= t('.facebook') %>
              <span class="pull-right icon-babu">
                <i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
          <li><%= t('.phone_number') %>
            <span class="pull-right icon-babu">
              <i class="fa fa-check-circle-o"></i></span></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>
    <div class="description ">
      <%= @user.description %>
    </div>
    <h4><% t('.listings') %> (<%= @locations.length %>)</h4>
    <br/>
    <div class="row">
      <% @locations.each do |location| %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag location.cover_photo(:medium) %>
            </div>
            <div class="panel-body">
              <%= link_to location.listing_name, location %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<h4><%= t('.review_from_guests') %> (<%= @guest_reviews.count %>)</h4>
<div class="row">
  <%= render "reviews/guest_list" %>
</div>
<br/>

<h4><%= t('.review_from_hosts') %> (<%= @host_reviews.count %>)</h4>
<div class="row">
  <%= render "reviews/host_list" %>
</div>
<br/>

</div>
