<div class="row">
  <div class="col-md-3">
    <%= render 'payment_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t('.payment_method') %>
      </div>
      <div class="panel-body">
        <div class="container">
          <% if !@current_card.blank? %>
            <div class="row">
              <div class="col-xs-8">
                <%= t('.your_current_card') %><br>
                <%= t('.last4_charcters_of_card') %>:
                <%= @current_card[:number] %>,
                <%= @current_card[:expiry] %>
              </div>
              <div class="col-xs-4">
                <%= link_to t('.delete_card'), payment_method_path, method: :delete, data:{confirm: t('.do_you_want_to_delete_card')}, class:"btn btn-warning btn-sm" %>
              </div>
            </div>
            <br><br>

          <% end %>

          <%= form_tag("/add_card", method: "post", id: "add-card") do %>
          <i id="card-info" data-key="<%= Rails.configuration.stripe[:publishable_key] %>"></i>

          <div class="form-row">
            <label for="card-element">
              <%= t('.credit_or_debit_card') %>
            </label>
            <div id="card-element"></div>
            <div id="card-errors" role="alert"></div>
          </div>
          <br>
          <div class="form-row">
            <% if current_user.stripe_id %>
              <button type="submit" class="btn btn-default"><%= t('.update_card') %></button>
            <% else %>
              <button type="submit" class="btn btn-default"><%= t('.add_card') %></button>
            <% end %>
            <small><%= t('.your_card_is_not_charged') %></small>
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>
</div>
<%= javascript_include_tag 'cards' %>
