<div class="row">
  <div class="col-md-3">
    <%= render 'users/payment_menu' %>
  </div>
  <div class="col-md-4">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3><%= t('.standard') %></h3>
      </div>
      <div class="panel-body">

          <ul>
            <li>
              <%= t('.name_description_contact')%>
            </li>
            <li>
              <%= t('.multiple_photos')%>
            </li>
            <li>
              <%= t('.found_in_searches')%>
            </li>
            <li>
              <%= t('.contact_by_mail_phone_and_web')%>
            </li>
          </ul>

        <small>
          <%= t('.included_free') %>
        </small>


      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3><%= t('.premium') %>
          <% if @hasSubscription %>
            <small class="subscription_active"><%= t('.active') %></small>
          <% end %>
        </h3>
        <small><%= t('.like_standard_including') %></small>
      </div>
      <div class="panel-body">

         <ul>
           <li>
             <%= t('.check_for_text_and_photos') %>
           </li>
           <li>
             <%= t('.prominent_in_search_results') %>
           </li>
           <li>
             <%= t('.shown_on_mainpage') %>
           </li>
           <li>
             <%= t('.contact_formular') %>
           </li>
           <li>
             <%= t('.verified_phone_number') %>
           </li>
         </ul>
         <small>9,99â‚¬ <%= t('.fee_per_month') %></small>
         <% if @hasSubscription %>
         <%= link_to t('.deactivate'), subscriptions_path, method: :post, data:{confirm: t('.are_you_sure_to_deactivate')}, class:"btn btn-default btn-block" %>
         <% else %>
         <%= link_to t('.activate'), subscriptions_path, method: :post, data:{confirm: t('.are_you_sure_to_activate')}, class:"btn btn-default btn-block" %>
         <% end %>


      </div>
    </div>
  </div>
</div>
